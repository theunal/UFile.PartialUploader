<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Authors>Yusuf Ünal</Authors>
		<Company>Yusuf Ünal</Company>
		<PackageProjectUrl>https://github.com/theunal/UFile.PartialUploader</PackageProjectUrl>
		<Description>The UFile library facilitates the uploading and processing of large files by handling them in smaller chunks.</Description>
		<PackageIcon>logo.png</PackageIcon>
		<PackageTags>partial file uploader</PackageTags>
		<RepositoryType>git</RepositoryType>
		<Version>1.1.3</Version>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\logo.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\readme.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.1" />
	</ItemGroup>

</Project>
